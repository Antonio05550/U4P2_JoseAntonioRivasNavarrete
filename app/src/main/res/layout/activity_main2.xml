<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f48cc"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="550px"
            android:layout_height="65px"
            android:layout_gravity="center"
            android:layout_margin="25px"
            android:text="Inmueble"
            android:textSize="60px" />

        <EditText
            android:id="@+id/id"
            android:layout_width="550px"
            android:layout_height="65px"
            android:layout_gravity="center"
            android:layout_margin="12px"
            android:background="@drawable/btb"
            android:ems="10"
            android:hint=" ID" />

        <EditText
            android:id="@+id/domicilio"
            android:layout_width="550px"
            android:layout_height="120px"
            android:layout_gravity="center"
            android:layout_margin="12px"
            android:background="@drawable/btb"
            android:ems="10"
            android:hint=" Domicilio"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/precioV"
            android:layout_width="550px"
            android:layout_height="65px"
            android:layout_gravity="center"
            android:layout_margin="12px"
            android:background="@drawable/btb"
            android:ems="10"
            android:hint=" Precio de venta"
            android:inputType="number" />

        <EditText
            android:id="@+id/precioR"
            android:layout_width="550px"
            android:layout_height="65px"
            android:layout_gravity="center"
            android:layout_margin="12px"
            android:background="@drawable/btb"
            android:ems="10"
            android:hint="Precio de renta"
            android:inputType="number" />

        <EditText
            android:id="@+id/fechaT"
            android:layout_width="550px"
            android:layout_height="65px"
            android:layout_gravity="center"
            android:layout_margin="12px"
            android:background="@drawable/btb"
            android:ems="10"
            android:hint=" Fecha de transacciÃ³n"
            android:inputType="date" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="550px"
            android:layout_height="65px"
            android:layout_gravity="center"
            android:layout_margin="12px"
            android:background="@drawable/btb"
            android:ems="10"
            android:hint=" Id propietario" />

        <Button
            android:id="@+id/agregar"
            android:layout_width="550px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:layout_margin="35px"
            android:background="@drawable/bta"
            android:text="AGREGAR"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="90px"
            android:layout_marginTop="25px"
            android:layout_marginRight="90px">

            <Button
                android:id="@+id/consultar"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:background="@drawable/search" />

            <Button
                android:id="@+id/actualizar"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/update" />

            <Button
                android:id="@+id/eliminar"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/delete" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>